// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                Int      @id @default(autoincrement())
  first_name        String
  last_name         String
  email             String   @unique
  avatar            String
  school            String?
  title             String
  main_skill        String
  secondary_skills  String[]
  description       String
  active            Boolean  @default(true)
  phone_number      String?

  @@index([email])
  @@index([active])
  @@index([main_skill])
  @@map("users")
}
